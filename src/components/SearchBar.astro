---
// SearchBar component
---

<div class="max-w-3xl mx-auto">
  <form class="relative">
    <div class="flex gap-2">
      <!-- Search Input -->
      <div class="flex-1 relative">
        <input
          type="text"
          placeholder="Search by game, store name, or location..."
          class="w-full pl-12 pr-6 py-4 bg-gray-800/80 backdrop-blur-md text-white placeholder-gray-400 rounded-xl border-2 border-gray-700 focus:border-yellow-400 focus:outline-none transition-colors"
        />
        <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      
      <!-- Filter Button -->
      <button type="button" class="px-6 py-4 bg-gray-800/80 backdrop-blur-md text-white rounded-xl border-2 border-gray-700 hover:border-yellow-400 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
        </svg>
      </button>
      
      <!-- Search Button -->
      <button type="submit" class="px-8 py-4 bg-gradient-to-r from-yellow-400 to-orange-500 text-gray-900 font-bold rounded-xl hover:from-yellow-500 hover:to-orange-600 transition-all transform hover:scale-105 flex items-center justify-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Search
      </button>
    </div>
  </form>
  
  <!-- Quick Filters -->
  <div class="flex flex-wrap gap-2 mt-4 justify-center">
    <button class="px-4 py-2 bg-gray-800/60 text-gray-300 rounded-lg hover:bg-yellow-400 hover:text-gray-900 transition-colors text-sm font-semibold">
      Open Now
    </button>
    <button class="px-4 py-2 bg-gray-800/60 text-gray-300 rounded-lg hover:bg-yellow-400 hover:text-gray-900 transition-colors text-sm font-semibold">
      Pokemon
    </button>
    <button class="px-4 py-2 bg-gray-800/60 text-gray-300 rounded-lg hover:bg-yellow-400 hover:text-gray-900 transition-colors text-sm font-semibold">
      Magic: The Gathering
    </button>
    <button class="px-4 py-2 bg-gray-800/60 text-gray-300 rounded-lg hover:bg-yellow-400 hover:text-gray-900 transition-colors text-sm font-semibold">
      Warhammer 40k
    </button>
    <button class="px-4 py-2 bg-gray-800/60 text-gray-300 rounded-lg hover:bg-yellow-400 hover:text-gray-900 transition-colors text-sm font-semibold">
      Has Play Space
    </button>
    <button class="px-4 py-2 bg-gray-800/60 text-gray-300 rounded-lg hover:bg-yellow-400 hover:text-gray-900 transition-colors text-sm font-semibold">
      Events Today
    </button>
  </div>
</div>